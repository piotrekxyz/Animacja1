<UserControl x:Class="Kontrolka.ServiceItem"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:Kontrolka"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800">

	<Grid Height="40" Width="300" VerticalAlignment="Center">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<TextBlock Height="38" Width="150" Grid.Column="0" HorizontalAlignment="Left" Text="DUPA" FontSize="20" VerticalAlignment="Center"/>
		<TextBlock Height="38" Width="110" Grid.Column="1" HorizontalAlignment="Right" Text="DUPA2" FontSize="14" VerticalAlignment="Center"/>
		<Ellipse Grid.Column="2" HorizontalAlignment="Right" Fill="Black" Width="20" Height="20" VerticalAlignment="Center" />
	</Grid>

</UserControl>
